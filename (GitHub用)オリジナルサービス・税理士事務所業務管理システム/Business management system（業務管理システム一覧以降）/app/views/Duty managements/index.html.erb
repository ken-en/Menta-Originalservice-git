<h1>勤務管理一覧</h1>

<% if @messages.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>社員名</th>
        <th>勤務状況</th>
      </tr>
    </thead>
    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td><%= link_to message.id, message %></td>
          <td><%= message.employee %></td>
          <td><%= message.duty situation %></td>
          <td><%= message.memo %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @messages %>
  </div>
<% end %>

<%= link_to '業務管理 新規登録', new_message_path, class: "btn btn-primary" %>