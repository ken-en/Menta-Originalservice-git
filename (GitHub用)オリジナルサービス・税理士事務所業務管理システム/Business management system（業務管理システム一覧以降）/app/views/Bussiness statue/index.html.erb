<h1>業務内容・状況一覧</h1>

<% if @messages.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>会社名</th>
        <th>業務内容</th>
        <th>処理期限日</th>
      </tr>
    </thead>
    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td><%= link_to message.id, message %></td>
          <td><%= message.Customer %></td>
          <td><%= message.Business %></td>
          <td><%= message.date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @messages %>
  </div>
<% end %>

<%= link_to '業務内容・状況　新規登録', new_message_path, class: "btn btn-primary" %>